{
    "name": "Custom Dev Functions",
    "version": "2.0.0",
    "manifest_version": 2,
    "description": "Injects script tag for custom dev tool functionality",
    "background": {
      "scripts": [
        "background.js"
      ],
      "persistent": true
    },
    "web_accessible_resources": [
      "main.js",
      "imports/helpers.js",
      "imports/elements.js"
   ],
    "browser_action": {
      "default_title": "custom dev"
    },
    "permissions": [
      "*://www.simplertrading.com/*",
      "*://dev.simplertrading.com/*",
      "http://127.0.0.1/*",
      "https://127.0.0.1/*",
      "tabs",
      "webNavigation"
    ]
  }